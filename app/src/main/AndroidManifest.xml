<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsbylyon.bouncearound"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.appsbylyon.bouncearound.SplashScreen"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsbylyon.bouncearound.BounceAroundMain"
            android:label="@string/app_name"  
            android:screenOrientation="portrait">
            
        </activity>
        <activity 
            android:name="PrefActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.appsbylyon.bouncearound.BounceAroundMain">
            
            
        </activity>
        <activity 
            android:name="About"
            android:screenOrientation="portrait"
            android:parentActivityName="com.appsbylyon.bouncearound.BounceAroundMain">
            
            
        </activity>
    </application>

</manifest>
